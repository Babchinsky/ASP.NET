@model _08_HW_11._04._2024_Music_Portal.Models.UserAndSongViewModel

<!DOCTYPE html>
<html>
<head>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous" />
</head>
<body>
    <p>Здравствуйте, @ViewData["Name"]</p>
    <div class="container">
        <h1>Все песни</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Исполнитель</th>
                    <th>Жанр</th>
                    <th>Год</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var song in Model.Songs)
                {
                    <tr>
                        <td>@song.Title</td>
                        <td>@song.Artist.Name</td>
                        <td>@song.Genre.Name</td>
                        <td>@song.Year</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if ((string)ViewData["Name"] == "admin")
    {
        <div class="container">
            <h1>Все пользователи</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th>Логин</th>
                        <th>Доступ</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.Login</td>
                            <td>@Html.DisplayFor(model => user.AccessLevel)</td>
                            <td>
                                <div class="btn-group" role="group" aria-label="Actions">
                                    <form asp-action="VerifyUser" asp-route-userId="@user.Id" method="post">
                                        <button type="submit" class="btn btn-primary">Верифицировать</button>
                                    </form>
                                    <form asp-action="DeleteUser" asp-route-userId="@user.Id" method="post">
                                        <button type="submit" class="btn btn-danger">Удалить</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    



</body>
</html>
