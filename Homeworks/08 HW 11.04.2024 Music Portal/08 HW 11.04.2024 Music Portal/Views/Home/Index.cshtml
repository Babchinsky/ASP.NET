@model _08_HW_11._04._2024_Music_Portal.Models.UserAndSongViewModel

@{
    var currentUser = ViewData["CurrentUser"] as _08_HW_11._04._2024_Music_Portal.Models.User;
}


<!DOCTYPE html>
<html>
<head>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous" />
</head>
<body>
    <p>Здравствуйте, @ViewData["Name"]</p>
    <div class="container">
        
            
            <div class="row mb-3">
            @if (currentUser != null && (currentUser.AccessLevel == AccessLevel.Admin || currentUser.AccessLevel == AccessLevel.VerifiedUser))
            {
                <div class="col">
                    <a asp-action="AddArtist" asp-controller="Admin" class="btn btn-success">Добавить Исполнителя</a>
                </div>
                <div class="col">
                    <a asp-action="AddGenre" asp-controller="Admin" class="btn btn-success">Добавить Жанр</a>
                </div>
           
                <div class="col">
                    <a asp-action="AddSong" asp-controller="Admin" class="btn btn-success">Добавить Песню</a>
                </div>
            }
               
            </div>
        
        
        <h1>Все песни</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Исполнитель</th>
                    <th>Жанр</th>
                    <th>Год</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var song in Model.Songs)
                {
                    <tr>
                        <td>@song.Title</td>
                        <td>@song.Artist.Name</td>
                        <td>@song.Genre.Name</td>
                        <td>@song.Year</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (currentUser != null && currentUser.AccessLevel == AccessLevel.Admin)
    {
        <div class="container">
            <h1>Все пользователи</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th>Логин</th>
                        <th>Доступ</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.Login</td>
                            <td>@Html.DisplayFor(model => user.AccessLevel)</td>
                            <td>
                                <div class="btn-group" role="group" aria-label="Actions">
                                    @if (user.AccessLevel == AccessLevel.UnverifiedUser)
                                    {
                                        <form asp-action="VerifyUser" asp-controller="Admin" asp-route-userId="@user.Id" method="post">
                                            <button class="btn btn-primary">Верифицировать</button>
                                        </form>
                                    }

                                    @if (user.AccessLevel != AccessLevel.Admin)
                                    {
                                        <form asp-action="DeleteUser" asp-controller="Admin" asp-route-userId="@user.Id" method="post">
                                            <button type="submit" class="btn btn-danger">Удалить</button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</body>
</html>
