@model List<_08_HW_11._04._2024_Music_Portal.Models.Song>

<!DOCTYPE html>
<html>
<head>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous" />
</head>
<body>
    <p>Здравствуйте, @ViewData["Name"]</p>
    <div class="container">
        <h1>Все песни</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Исполнитель</th>
                    <th>Жанр</th>
                    <th>Год</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var song in Model)
                {
                    <tr>
                        <td>@song.Title</td>
                        <td>@song.Artist.Name</td>
                        <td>@song.Genre.Name</td>
                        <td>@song.Year</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
